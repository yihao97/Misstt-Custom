<script>
  document.documentElement.classList.replace('no-js', 'js');

  window.theme = window.theme || {};

  theme.routes = {
    root_url: '{{ routes.root_url }}',
    cart_url: '{{ routes.cart_url }}',
    cart_add_url: '{{ routes.cart_add_url }}',
    cart_change_url: '{{ routes.cart_change_url }}',
    cart_update_url: '{{ routes.cart_update_url }}',
    search_url: '{{ routes.search_url }}',
    predictive_search_url: '{{ routes.predictive_search_url }}'
  };

  theme.cartStrings = {
    error: `{{ 'sections.cart.cart_error' | t }}`,
    quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
  };

  theme.variantStrings = {
    addToCart: `{{ 'products.product.add_to_cart' | t }}`,
    soldOut: `{{ 'products.product.sold_out' | t }}`,
    unavailable: `{{ 'products.product.unavailable' | t }}`,
    preOrder: `{{ 'products.product.pre_order' | t }}`
  };

  theme.accessibilityStrings = {
    imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
    shareSuccess: `{{ 'general.share.success_message' | t }}`
  }

  theme.dateStrings = {
    d: `{{ 'general.date.d' | t }}`,
    day: `{{ 'general.date.day' | t }}`,
    days: `{{ 'general.date.days' | t }}`,
    hour: `{{ 'general.date.hour' | t }}`,
    hours: `{{ 'general.date.hours' | t }}`,
    minute: `{{ 'general.date.minute' | t }}`,
    minutes: `{{ 'general.date.minutes' | t }}`,
    second: `{{ 'general.date.second' | t }}`,
    seconds: `{{ 'general.date.seconds' | t }}`
  };

  {%- if request.page_type == 'gift_card' -%}
    theme.qrStrings = {
      imageAlt: `{{ 'gift_cards.issued.qr_image_alt' | t }}`
    };
  {%- endif -%}

  theme.shopSettings = {
    moneyFormat: {{ shop.money_format | json }},
    isoCode: {{ cart.currency.iso_code | json }},
    cartDrawer: {{ settings.cart_drawer_enabled }},
    currencyCode: {{ settings.currency_code_enabled }},
    giftwrapRate: '{{ settings.giftwrap_rate_type }}'
  };

  theme.settings = {
    themeName: 'Dawn Misstt',
    themeVersion: '7.2.1',
    agencyId: ''
  };
</script>
